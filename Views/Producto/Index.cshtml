@model List<RepositorioDTO_EF.DTO.ProductoDTO>

    <h1>Productos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
        <i class="fab fa-product-hunt"></i>&nbsp;&nbsp;Agregar Producto</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Opciones administrador</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Precio)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                            <i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;Editar</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i>&nbsp;&nbsp;Eliminar</a>
                    </td>
                </tr>         
            }
        </tbody>
    </table>